<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gonzalomansilla.testlayout.Registro"
    android:background="#2987ec">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de Usuario:"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:textColor="#ffffff"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usuario"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:editable="false"
            android:elegantTextHeight="false"
            android:gravity="center"
            android:inputType="text"
            android:textColor="#000000"
            android:layout_weight="0.06"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:backgroundTint="#e2e2e2"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PID (Código):"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/codigoPid"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:editable="false"
            android:elegantTextHeight="false"
            android:gravity="center"
            android:inputType="number|text"
            android:textColor="#000000"
            android:layout_weight="0.06"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:backgroundTint="#e2e2e2"
            android:hint="99999"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña:"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Psw1"
            android:background="#ffffff"
            android:editable="false"
            android:elegantTextHeight="false"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_weight="0.06"
            android:inputType="textPassword"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:backgroundTint="#e2e2e2"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repita contraseña:"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:singleLine="false"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Psw2"
            android:background="#ffffff"
            android:editable="false"
            android:elegantTextHeight="false"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_weight="0.06"
            android:inputType="textPassword"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:backgroundTint="#e2e2e2"
            android:padding="5dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acepto condiciones"
            android:id="@+id/verCondiciones"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ver"
            android:id="@+id/textView9"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:textColor="#ffffff"
            android:onClick="botonCondiciones" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:id="@+id/login"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:textColor="#FFFFFF"
            android:width="90dp"
            android:background="#58889e"
            android:layout_marginTop="20dp"
            android:onClick="registrar" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:id="@+id/volver"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:textColor="#FFFFFF"
            android:width="90dp"
            android:background="#58889e"
            android:layout_marginTop="20dp"
            android:onClick="botonVolver" />





    </LinearLayout>



</RelativeLayout>
